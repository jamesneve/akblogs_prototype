<%= form_for @site do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name, class: "standard-input" %>
	<%= f.text_field :name, value: params[:name], class: "standard-input" %>

	<%= f.label :url, class: "standard-input" %>
	<%= f.text_field :url, value: params[:url], class: "standard-input" %>

	<%= f.label :rss, class: "standard-input" %>
	<%= f.text_field :rss, value: params[:rss], class: "standard-input" %>
	<br />
	<%= f.submit "Add Site!", class: "btn", id: "site-submit-button" %>

<% end %>