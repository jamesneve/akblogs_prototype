<div class="post">
	<div class="postimage-container">
		<% if post.image_url %>
			<%= image_tag post.image_url.to_s, class: "postimage" %>
		<% else %>
			<%= image_tag 'default-post-image.jpg', class: "postimage" %>
		<% end %>
	</div>
	<div class="posttext">
		<div class="posttitle">
			<%= link_to post.title, post.entry_url, target: '_blank' %><br />
		</div>
		<div class="postsummary">
			<%= (Nokogiri::HTML(post.content).xpath("//text()").to_s).truncate(60) %>
		</div>
		<span class="postdate-published"><%= post.published_on.strftime('%a %d/%m') if post.published_on%></span>
		<span class="postauthor"><%= post.site.name.truncate(20) %></span>
	</div>
</div>